# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Routers for the trip offers                                                          
GET     /trip_offer.json                   controllers.TripOfferController.getTripOffers()
POST    /trip_offer.json                   controllers.TripOfferController.setTripOffer()
GET     /trip_offer/:id.json               controllers.TripOfferController.getTripOffer(id: java.lang.Integer)
PUT     /trip_offer/:id.json               controllers.TripOfferController.updateTripOffer(id: java.lang.Integer)

# Routers for the trip request
GET     /trip_request.json                 controllers.TripRequestController.getTripRequests()
POST    /trip_request.json                 controllers.TripRequestController.setTripRequest()
GET     /trip_request/:id.json             controllers.TripRequestController.getTripRequest(id: java.lang.Integer)
PUT     /trip_request/:id.json             controllers.TripRequestController.updateTripRequest(id: java.lang.Integer)

# Routers for The matches
GET     /match/:id.json             	   controllers.MatchController.getMatch(id: java.lang.Integer)
PUT     /match/:id.json                    controllers.MatchController.updateMatch(id: java.lang.Integer)

# Routers for the trip request
GET     /user.json                         controllers.UserController.getUsers()
POST    /user.json                         controllers.UserController.setUser()
GET     /user/:id.json                     controllers.UserController.getUser(id: java.lang.Integer)
PUT     /user/:id.json                     controllers.UserController.updateUser(id: java.lang.Integer)

# Routes for the data generator
GET		/generate/offers/:number	controllers.GeneratorController.generateTripOffers(number: java.lang.Integer)
GET		/generate/requests/:number	controllers.GeneratorController.generateTripRequests(number: java.lang.Integer)